			<argument type="service" id="sylius.behat.notification_checker"/>
			<argument type="service" id="sylius.repository.taxon"/>
		</service>

		<service id="Tests\MangoSylius\SortingPlugin\Behat\Pages\Admin\Sorting\SortingPageInterface"
				 class="Tests\MangoSylius\SortingPlugin\Behat\Pages\Admin\Sorting\SortingPage"
				 parent="sylius.behat.symfony_page"
				 public="true"
		/>

	</services>
</container>
