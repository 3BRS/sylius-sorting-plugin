{
    "name": "3brs/sylius-sorting-plugin",
    "type": "sylius-plugin",
    "description": "Sorting plugin for Sylius",
    "license": "MIT",
    "require": {
        "php": "^8.0",
        "sylius/sylius": "1.12.*"
    },
    "require-dev": {
        "api-platform/core": ">=2.7",
        "behat/behat": "^3.11.1",
        "behat/mink-selenium2-driver": "^1.6",
        "dmore/behat-chrome-extension": "^1.4",
        "dmore/chrome-mink-driver": "^2.9",
        "doctrine/doctrine-bundle": ">=2.9",
        "doctrine/dbal": ">=3.6",
        "doctrine/data-fixtures": "^1.6",
        "doctrine/collections": ">=1.8",
        "friends-of-behat/mink": "^1.10",
        "friends-of-behat/mink-browserkit-driver": "^1.6",
        "friends-of-behat/mink-extension": "^2.7",
        "friends-of-behat/page-object-extension": "^0.3",
        "friends-of-behat/suite-settings-extension": "^1.1",
        "friends-of-behat/symfony-extension": "^2.4",
        "friends-of-behat/variadic-extension": "^1.5",
        "jms/serializer-bundle": ">=4.2.0",
        "knplabs/knp-menu": ">=3.3.0",
        "lakion/mink-debug-extension": "^2.0.0",
        "league/flysystem-bundle": "^2.4",
        "lexik/jwt-authentication-bundle": ">=2.12.0",
        "masterminds/html5": ">=2.7.6",
        "phpspec/phpspec": "^7.3",
        "phpstan/phpstan": "^1.10",
        "polishsymfonycommunity/symfony-mocker-container": "^1.0",
        "sensiolabs/security-advisories": "dev-master",
        "slevomat/coding-standard": "^8.9",
        "squizlabs/php_codesniffer": "^3.7",
        "sylius-labs/coding-standard": "^4.3.0",
        "symfony/browser-kit": "^4.4|^5.2|^6.0",
        "symfony/debug-bundle": "^4.4|^5.2|^6.0",
        "symfony/dom-crawler": "^6.0",
        "symfony/dotenv": "^5.2|^6.0",
        "symfony/intl": "^5.2|^6.0",
        "symfony/css-selector": "^6.0",
        "symfony/var-dumper": "^6.0",
        "symfony/web-profiler-bundle": "^5.2|^6.0",
        "twig/twig": ">=3.4.0",
        "webmozart/assert": ">=1.11"
    },
    "conflict": {
        "willdurand/negotiation": "<3.0.0"
    },
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "ThreeBRS\\SortingPlugin\\": "src/",
            "Tests\\ThreeBRS\\SortingPlugin\\": "tests/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/Application/Kernel.php"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true
    },
    "scripts": {
        "analyze": [
            "vendor/bin/phpstan analyse -c phpstan.neon",
            "vendor/bin/phpcs"
        ],
        "test": [
            "bin/behat"
        ]
    }
}
