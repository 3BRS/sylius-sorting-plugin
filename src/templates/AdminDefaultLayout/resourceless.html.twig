{% extends '@SyliusAdmin/shared/layout/base.html.twig' %}

{# Prepare reusable variables like Sylius does internally in CRUD controllers #}
{# applicationName and pluralName is used as a fallback for the breadcrumb, see vendor/sylius/sylius/src/Sylius/Bundle/AdminBundle/templates/shared/crud/index/content/header/breadcrumbs.html.twig
	Change it by passing 'title' when rendering the template
#}
{% set metadata = metadata|default({
	applicationName: 'threebrs',
	pluralName: 'sorting_plugin',
	name: 'sorting_plugin',
}) %}

{% set configuration = configuration|default({
	title: 'threebrs.ui.sortingPlugin.menuTitle'|trans
}) %}

{% set resources = resources|default({ definition: { enabledFilters: false }, data: {} }) %}
{% set filters = filters|default({}) %}
{% set resource=null %}

{# Block for title, using configuration title #}
{% block title %}
                    {{ ux_icon('bi:arrow-down-up', {class: 'w-4 h-4 text-primary'}) }}

	{{ configuration.title|trans }} | {{ parent() }}
{% endblock %}

{% block body %}
	{% hook 'sylius_admin.resourceless.index.content'%}
{% endblock %}



{# Block for stylesheets - delegates to hook #}
{% block stylesheets %}
	{{ parent() }}
	{% hook 'sylius_admin.base#stylesheets' %}
{% endblock %}

{# Block for javascripts - delegates to hook #}
{% block javascripts %}
	{{ parent() }}
	{% hook 'sylius_admin.base#javascripts' %}
{% endblock %}