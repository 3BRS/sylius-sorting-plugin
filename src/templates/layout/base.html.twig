{% extends '@SyliusAdmin/shared/layout/base.html.twig' %}

{% from '@SyliusAdmin/shared/helper/breadcrumbs.html.twig' import breadcrumbs %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block body %}

	{% include '@SyliusAdmin/shared/crud/common/sidebar.html.twig' %}
	{% include '@SyliusAdmin/shared/crud/common/navbar.html.twig' %}
	<div class="page-wrapper">
		{% include '@SyliusAdmin/shared/crud/common/content/flashes.html.twig' %}
		<div class="page-header" data-sticky-header>
			<div class="container-xl">
				{{ breadcrumbs([
					{ 'name': 'Dashboard', 'url': path('sylius_admin_dashboard'), 'active': false },
					{ 'name': '_', 'active': true },
				]) }}
				<script>
					{# because we do not know the active breadcrumb item from a Twig variable #}
					document.querySelector("li.breadcrumb-item.active").innerHTML = document.title
				</script>
				<div class="row mt-3 row-gap-2">
					<div class="col-12 col-md">
						<div class="d-md-flex gap-2 align-items-center">
							<div class="d-flex gap-3 align-items-center">
								<div class="d-flex flex-column gap-2">
									<h1 class="page-title">
										{% block pageTitle %}{% endblock pageTitle %}
									</h1>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="card">
			{% block content %}{% endblock content %}
		</div>
	</div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
{% endblock %}
